@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em

.main-cont
	center(1280px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed!important
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
.header-wrap--main.shrink
	background: white !important
	.logo--main
		display none
	.logo--sm
		display block
	.logo
		width: auto
		height: 80px
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(768px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	max-width 400px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity

.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 20px
	right: 20px
	cp()
	size 50px
	br(20px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--xl
	font-weight: 700

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%
// modal === end

// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	bsh()
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

.header-wrap
	background: white
	box-shadow 0 5px 10px rgba(0, 0, 0, 0.05)
	z-index 10
.header
	height: 80px
	f()
	align-items center
.header-wrap--main
	width: 100%
	position: absolute
	background: #ffffffb8
	.logo
		margin-right: 20px
		position relative
		width: 200px
		display inline-block
		height: 80px
	.logo--sm
		display none
.logo--main
	img
		position absolute
		width: 100%
		top 0
		left 0
.header-nav
	flex(between)
	width: 60%
.header-nav__el
	position relative
	padding: 10px 5px
	cp()
	z-index 2
	&:hover
		.header-nav__el-title
			color $green
.header-nav__el--sub
	tr()
	.header-nav__el-title
		border-bottom 1px dashed #c0c5cc
	&:hover
		background: white
		box-shadow 0 5px 10px rgba(0, 0, 0, 0.07)
		.header-nav__el-title
			border-bottom 1px dashed transparent
			color $gray
		.header-nav__drop
			z-indez 2
			opacity: 1
			transform translateY(0)
//.header-nav__el-title
.header-nav__drop
	tr()
	position absolute
	width: 300px
	padding: 20px
	background: white
	top 100%
	left 0
	box-shadow 0 10px 10px rgba(0, 0, 0, 0.07)
	z-index -1
	opacity: 0
	transform translateY(-10px)
.header-nav__drop-el
	display block
	margin-bottom: 20px
	&:last-child
		margin-bottom: 0
	&:hover
		color $green
.header-contact
	margin-left auto
	f()
	fl()
	align-items: flex-end
	.phone
		margin-bottom: 5px
.phone
	@extend .type--md
	font-weight 700
	span
		font-size 16px
.callback
	f()
	align-items center
	cp()
	&:hover
		.callback-icon
			&:before
				content ''
				transform scale(1.8)
.callback-icon
	round()
	size 22px
	border 1px solid $mark
	margin-right: 10px
	position relative
	flex(mid)
	&:before
		content ''
		size 6px
		tr()
		round()
		transform scale(1)
		background: $mark

// main-slider
.main-slider__el
	bg-full()
	position relative
	width: 100%
	height: 100vh
	-webkit-filter unquote("blur(3px)")
	margin: 0 10px
	margin-bottom: 40px
.main-slider__el.slick-active
	-webkit-filter unquote("blur(0)")

.main-slider-info
	position absolute
	top 0
	left 0
	width: 100%
	height: 100%
	.main-cont
		height: 100%
		f()
		align-items center
.slider-banner
	max-width 460px
.msg-box
	background-color #ffffff
	opacity 0.9
	padding: 30px 40px
	display inline-block
	margin-top: 10%
	margin-left: 20px
	position relative
	transform-style: preserve-3d
	&:before
		content ''
		transform: translateZ(-1px)
		position absolute
		width calc(100% + 40px)
		height calc(100% + 40px)
		top -20px
		left -20px
		border 1px solid white
.slider-banner--lg
	max-width 560px
.slider-banner__title
	@extend .type--xl
	font-weight 700
	margin-bottom: 20px
.slider-banner__text
	font-weight 700
	line-height: 1.4
	margin-bottom: 20px

// main-slider === end

// slick
// === убираем выделения активности при клик ===
.slick-slide
	&:hover
		outline none!important
	&:active
		outline none!important
	&:focus
		outline none!important
// === убираем выделения активности при клике end ===
 
// === for custom navigation === 
.slider-wrap
	position relative
 
//Навигация снаружи
.slider-wrap--simple
	.slider-control
		round()
		flex(mid)
		tr(all)
		size 60px
		background: $snow
		position: absolute
		top 50%
		margin-top: -30px
		z-index 10
		cp()
		&:hover
			background: darken($snow,3)
		.icon
			size 18px
	.slider-control--left
		left -80px
	.slider-control--right
		right -80px
//Навигация снаружи end
 
//Навигация внутри
.slider-wrap--inarrow
	.slider-control
		flex(mid)
		tr(all)
		position: absolute
		top 50%
		margin-top: -20px
		z-index 10
		padding: 20px 10px
		background: black
		cp()
		opacity: .6
		&:hover
			opacity: 1
			.icon
				fill white
		.icon
			fill white
			size 30px
	.slider-control--left
		left 0
	.slider-control--right
		right 0
//Навигация внутри
// === for custom navigation === 
 
//=== Внешний вид пагинации ===
.slick-dots
	+below(720px)
		bottom -20px
	width: 100%
	display: flex !important
	align-items: center
	justify-content: center
	bottom 50px
	li
		+below(720px)
			size 10px
			flex(mid)
	.dot
		+below(720px)
			flex(mid)
			size 6px
		background: white
		width: 20px
		height: 4px
		display: block
		br(3px)
		opacity: .5
	.slick-active
		.dot
			opacity: 1
.slick-slide
	img
		width: 100%
//=== Внешний вид пагинации end===
// slick === end


// grid
.row
	display: grid
	grid-gap 30px
.row-2
	+below(768px)
		grid-template-columns: 1fr
	grid-template-columns: repeat(2, 1fr)

.fluid-cont
	f()
.fluid-cont-el
	width: 50%

.fluid-cont-el--sm
	f()
	.fluid-cont-wrap
		max-width 640px
		margin-left auto
		padding: 30px 30px 30px 10px
.fluid-cont-img
	bg-full()
	padding: 25% 10%
	position relative
	flex(mid)
// grid === end

.box-img
	bg-full()
	padding: 32% 10%
.position
	margin-bottom: 10px
	color $gray
	.icon
		fill $gray

.slider-example
	margin-bottom: 90px

.card__img
	bg-full()
	padding: 30% 10%
	display block
	margin-bottom: 10px
.card-name
	//link($green)
	display inline-block

.slider-example__text
	line-height: 1.6
	margin-bottom: 30px

.slider-example__wrap
	f()
	fl()
	height: 100%

.slider-example-img
	margin-top: auto

.link
	position relative
	display inline-block
	padding-bottom: 4px
	&:before
		content ''
		bottom 0
		left 0
		background: $gray-light
		height: 1px
		width: 100%
		position absolute
	&:after
		content ''
		bottom 0
		left 0
		background: $green
		height: 2px
		width: 20%
		position absolute
		tr()
a.link
	&:hover
		&:after
			content ''
			width: 100%

.border
	position relative
	transform-style: preserve-3d
	&:before
		content ''
		width: 100%
		height: 100%
		border 1px solid $border-color
		position absolute
		transform: translateZ(-1px)
.border--bottom
	&:before
		content ''
		right: -15px
		bottom -15px
		z-index -1

.border--top
	&:before
		content ''
		left: -15px
		top -15px
		z-index -1

.play
	position absolute
	.icon
		size 80px
		cp()
		z-indez 2
		fill white
		round()

.section
	margin-bottom: 60px

.advant
	display: grid
	grid-gap 40px
	grid-template-columns: repeat(3, 1fr)
.advant__el
	bg-full()
	padding: 30% 10%
	f()
	position relative
.advant__el-title
	position absolute
	bottom 0
	left 0
	width: 100%
	padding: 15px
	text-align center
	background: #1111117a
	color white

.order-banner
	bg-full()
.order-banner-wrap
	center(1280px,10px)
	f()
	padding: 100px 0

.order-form__title
	position relative

.order-form
	max-width 460px
	margin-top: 0
	margin-left: auto
	padding: 40px
	margin-right: 30px