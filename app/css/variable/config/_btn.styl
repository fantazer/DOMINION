// ============================ Buttons ============================
.btn
	br(30px)
	tr(all)
	display inline-block
	background none
	border 0
	text-align: center
	&:hover
		cursor pointer

.btn--sm
	@extend .btn
	font-size 10px
	padding 5px 10px

.btn--md
	@extend .btn
	padding 18px 50px
	font-weight: 600
	position relative
	&:before
		content ''
		width: calc(100% + 12px)
		height: calc(100% + 12px)
		position absolute
		top -6px
		left -6px
		br(35px)

.btn--lg
	@extend .btn
	font-size 20px
	padding 10px 30px

.btn--mobile
	@extend .btn
	+below(768px)
		width 100%
		text-align center

.btn--mark
	@extend .btn
	color white
	background $green
	border 5px solid
	.nav-icon
		fill white
	&:hover
		color white!important
		&:before
			content ''
			box-shadow inset 0 0 0 3px $green
	&:active
		background-color darken($green,5)
	&:before
		content ''
		tr()
		box-shadow inset 0 0 0 1px $green

	input[type="submit"]
		border 0
	.nav-icon
		fill white

.btn--red
	@extend .btn
	color white
	background $mark
	border 5px solid
	.nav-icon
		fill white
	&:hover
		color white!important
		&:before
			content ''
			box-shadow inset 0 0 0 3px $mark
	&:active
		background-color darken($mark,5)
	&:before
		content ''
		tr()
		box-shadow inset 0 0 0 1px $mark

	input[type="submit"]
		border 0
	.nav-icon
		fill white


.btn--disable
	@extend .disabled
	border 1px solid $border-color
	background-color #ffffff
	color #000000

.btn--light
	@extend .btn
	border 1px solid $border-color
	background-color #ffffff
	&:hover
		border 1px solid $green
	.nav-icon
		fill $green

.btn--white
	@extend .btn
	border 1px solid rgba(255, 255, 255, 0.9)
	color rgba(255, 255, 255, 0.9)
	.nav-icon
		fill rgba(255, 255, 255, 0.9)

.btn--square
	padding: 10px 15px
	font-size: 14px
	br(10px)
	border 0
	&:before
		content ''
		display none

.btn--icon
	flex(mid)
	.nav-icon
		margin-left: 10px

.nav-icon
	size 20px
	display inline-block

.btn--icon-left
	.nav-icon
		margin-left: 0
		margin-right: 10px

.btn-row-mid
	flex(mid)
	margin: 30px 0

.btn--full
	width: 100%
	display block

.btn--scroll
	padding: 18px 10px
	width: 100%
	transition background .4s

.btn--fix
	min-width 320px

.gallery
	display: grid
	grid-gap 20px
	grid-template-columns: repeat(4, 1fr)
.gallery__el
	bg-full()
	padding: 33% 10%
